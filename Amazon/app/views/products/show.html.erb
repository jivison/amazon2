<article>
    <h3><%= @product.title %></h1>
    <h4>Price $<%= '%.2f' % @product.price  %></h4>
    <p class="description"%><%= @product.description %></p>

    <%#= link_to 'Edit', :edit_product %>
    <%#= link_to 'Delete', :delete_product, method: :delete, data: {confirm: "Are you sure?"} %>

<h3>Leave a review!</h3>
<div class="form">
        <% if @review.errors.any? %>
            <ul>
                <% @review.errors.full_messages.each do |msg|%>
                <li class="error-msg"><%=msg%></li>
                <% end %>
            </ul>

        <%end%>
        <%= form_with model: [@product, @review], local: true do |f| %>
            <div>
            <%= f.label :body %>
            <%= f.text_area :body %>
            </div>
            
            <div>
            <%= f.label :rating %>
            <%= f.text_field :rating %>
            </div>

            <%= f.submit %>

        <% end %>
    </div>

    <h3>Reviews</h3>
    <% @reviews.each do |review| %>
        <div class="review">
            <p style="font-weight: 900"><%= review.rating %> Star</p>
            <p><%= review.body %></p>
        </div>
    <% end %>




</article>
