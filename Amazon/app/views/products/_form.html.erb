    <%= form_for @product, :html => {class: "new-product-form"} do |f| %>
    
            <%= f.label :title %>
            <%= f.text_field :title %>
    

    
            <%= f.label :description %>
            <%= f.text_area :description %>
    

    
            <%= f.label :price %>
            <%= f.text_field :price %>
    

        <%= f.submit %>

    <% end %>